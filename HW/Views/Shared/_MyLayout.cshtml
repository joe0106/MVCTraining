<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            
            @foreach (var record in Model)
            {
                <tr>
                    <td>@(Model.IndexOf(record) + 1)</td>
                    <td>@(record.Category)</td>
                    <td>@(record.BuyDate)</td>
                    <td>@(record.Price)</td>
                </tr>
            }
            


        </table>
    </div>
</div>